{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Telemetry Dictionary Schema",
    "description": "Telemetry Dictionary Schema",
    "type": "array",
    "items": {
        "required": ["packet", "fields"],
        "additionalProperties": false,
        "properties": {
            "packet": {
                "type": "string"
            },
            "name": {
                "type": "string"
            },
            "desc": {
                "type": "string"
            },
            "fields": {
                "type": "array",
                "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["field", "name", "type"],
                    "properties": {
                        "field": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "type": {
                            "type": "string"
                        },
                        "desc": {
                            "type": "string"
                        },
                        "mask": {
                            "type": "integer"
                        },
                        "bytes": {
                            "type": [ "integer", "array" ],
                            "description": "TODO: Need to update the min/max when NOT a list",
                            "maxItems": 2,
                            "items": { "type": "integer" }
                        },
                        "enum": {
                            "type": "object",
                            "description": "TODO: Does not check valid enumeration"
                        }
                    }
                }
            }
        }
    }
}
