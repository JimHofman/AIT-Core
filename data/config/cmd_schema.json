{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Command Dictionary Schema",
	"description": "Command Dictionary Schema",
	"type": "object",
	"additionalProperties": false,
	"required": ["name", "opcode"],
	"properties": {
		"name": {
			"type": "string"
		},
		"opcode": {
			"type": "integer"
		},
		"subsystem": {
			"type": "string"
		},
		"desc": {
			"type": "string"
		},
		"arguments": {
			"type": "object",
			"properties": {
				"argument": {
					"type": "object",
					"additionalProperties": false,
					"required": ["name", "type", "bytes"],
					"properties": {
						"name": {
							"type": "string"
						},
						"desc": {
							"type": "string"
						},
						"units": {
							"type": "string"
						},
						"range": {
							"type": "array",
							"maxItems": 2
						},
						"type": {
							"type": "string"
						},
						"bytes": {
							"type": [ "integer", "array" ],
							"description": "TODO: Need to update the min/max when NOT a list",
							"maxItems": 2,
							"items": { "type": "integer" }
						},
						"enum": {
							"type": "object",
							"description": "TODO: Does not check valid enumeration"
						},
						"value": {
							"type": "number",
							"description": "TODO: Does not check valid enumeration"
						}
					}
				},
				"fixed": {
					"type": "object",
					"additionalProperties": false,
					"required": ["type", "bytes"],
					"properties": {
						"name": {
							"type": "string"
						},
						"desc": {
							"type": "string"
						},
						"units": {
							"type": "string"
						},
						"type": {
							"type": "string"
						},
						"bytes": {
							"type": [ "integer", "array" ],
							"description": "TODO: Need to update the min/max when NOT a list",
							"maxItems": 2,
							"items": { "type": "integer" }
						},
						"enum": {
							"type": "object",
							"description": "TODO: Does not check valid enumeration"
						},
						"value": {
							"type": "number",
							"description": "TODO: Does not check valid enumeration"
						}
					}
				}
			}
		}
	}
}